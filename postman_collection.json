{
	"info": {
		"_postman_id": "crypto-wallets-service-v1",
		"name": "Crypto Wallets Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"health"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Wallet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"wallet_id\", jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Api-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"label\": \"My Primary Wallet\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/wallets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"wallets"
					]
				}
			},
			"response": []
		},
		{
			"name": "List Wallets",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Api-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/wallets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"wallets"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Address (ETH)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Api-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/wallets/{{wallet_id}}/address/eth?index=0",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"wallets",
						"{{wallet_id}}",
						"address",
						"eth"
					],
					"query": [
						{
							"key": "index",
							"value": "0"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Address (TRON)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Api-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/wallets/{{wallet_id}}/address/tron?index=0",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"wallets",
						"{{wallet_id}}",
						"address",
						"tron"
					],
					"query": [
						{
							"key": "index",
							"value": "0"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Sign Transaction",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-Api-Key",
						"value": "{{api_key}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"network\": \"eth\",\n    \"index\": 0,\n    \"unsigned_tx\": \"...hex...\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/v1/wallets/{{wallet_id}}/sign",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"wallets",
						"{{wallet_id}}",
						"sign"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		},
		{
			"key": "api_key",
			"value": "test-secret-key"
		},
		{
			"key": "wallet_id",
			"value": ""
		}
	]
}
